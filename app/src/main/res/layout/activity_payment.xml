<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PaymentActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0763A2">

        <ImageView
            android:id="@+id/backbtn"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/whiteback" />

        <TextView
            android:layout_toRightOf="@+id/backbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Methods"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textColor="#fff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Started Today"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
           />

        <TextView
            android:layout_below="@+id/started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHoose the right plan and start creating service"
            android:gravity="center"
            android:textSize="13sp"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="10dp"

            app:cardElevation="6dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtGold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gold"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/txtdoller"
                    android:layout_below="@+id/txtGold"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="$"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"
                    android:textColor="#0764A4" />

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_below="@+id/txtGold"
                    android:layout_toRightOf="@+id/txtdoller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.99"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#0764A4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtPrice"
                    android:layout_centerHorizontal="true"
                    android:text="Life time \n access"
                    android:gravity="center" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="10dp"

            app:cardElevation="6dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtGold1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gold"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"
                   />

                <TextView
                    android:id="@+id/txtDoller1"
                    android:layout_below="@+id/txtGold1"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="$"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"
                    android:textColor="#0764A4" />

                <TextView
                    android:id="@+id/txtPrice1"
                    android:layout_below="@+id/txtGold1"
                    android:layout_toRightOf="@+id/txtDoller1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.99"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#0764A4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtPrice1"
                    android:layout_centerHorizontal="true"
                    android:text="Monthly Subscription"
                    android:gravity="center" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:layout_margin="10dp"

            app:cardElevation="6dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gold"
                    android:layout_marginLeft="10dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/doller"
                    android:layout_below="@+id/txt_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="$"
                    android:layout_centerHorizontal="true"
                    android:textSize="13sp"
                    android:textColor="#0764A4" />

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_below="@+id/txt_gold"
                    android:layout_toRightOf="@+id/doller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.99"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#0764A4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_price"
                    android:layout_centerHorizontal="true"
                    android:text="Life time \n access"
                    android:gravity="center" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black" />

    <LinearLayout
        android:weightSum="2"
       android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivRight"
                android:layout_width="35dp"
                android:layout_margin="10dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/right" />

            <TextView
                android:layout_toRightOf="@+id/ivRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Payment Method"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/circle"
                android:layout_width="35dp"
                android:layout_margin="10dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/circle" />

            <TextView
                android:layout_toRightOf="@+id/circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Details"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="230dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_height="50dp"
            android:background="@drawable/bordershape2">

            <ImageView
                android:id="@+id/ivCredit"
                android:layout_width="35dp"
                android:layout_margin="10dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/right" />

            <TextView
                android:layout_toRightOf="@+id/ivCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Card"
                android:layout_centerVertical="true"
                android:textSize="13dp"
                android:gravity="center" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="230dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_height="50dp"
            android:background="@drawable/bordershape2">

            <ImageView
                android:id="@+id/ivInternet"
                android:layout_width="35dp"
                android:layout_margin="10dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/right" />

            <TextView
                android:layout_toRightOf="@+id/ivInternet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internet Banking"
                android:layout_centerVertical="true"
                android:textSize="13dp"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="165dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_height="50dp"
        android:background="@drawable/bordershape2">

        <ImageView
            android:id="@+id/right"
            android:layout_width="35dp"
            android:layout_margin="10dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/paypal" />

        <TextView
            android:layout_toRightOf="@+id/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Paypal"
            android:layout_centerVertical="true"
            android:textSize="13dp"
            android:gravity="center" />
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Details"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="13dp"

            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:background="@drawable/shape_border">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Number"
          android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="13dp"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="14"
            android:gravity="center" />
        <View
            android:layout_marginTop="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black" />


        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MM/YY"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="13dp"
            android:singleLine="true"
            android:gravity="center" />
        <View
            android:layout_marginTop="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black" />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cvc"
          android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="13dp"
            android:maxLength="3"
            android:singleLine="true"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textSize="13dp"
                android:gravity="center" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:textSize="13dp"
                android:gravity="center" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@drawable/edit_shape">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:background="@null"
                android:hint="Enter name"

                android:paddingLeft="10dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_shape">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:background="@null"
                android:hint="Enter email"
                android:singleLine="true"
                android:paddingLeft="10dp" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.google.android.material.button.MaterialButton
            android:layout_width="300dp"
            android:layout_marginTop="20sp"
            android:layout_below="@+id/text"
            android:layout_height="60dp"
            android:backgroundTint="#0865A4"
            app:cornerRadius="10dp"
            android:layout_centerInParent="true"
            android:text="Pay"
            android:id="@+id/btn_pay">

        </com.google.android.material.button.MaterialButton>
    </RelativeLayout>
</LinearLayout>